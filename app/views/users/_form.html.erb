<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name, class: 'mb-2' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :age, class: 'mb-2' %>
    <%= form.number_field :age, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :password, class: 'mb-2' %>
    <%= form.text_field :password, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :email, class: 'mb-2' %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class="actions form-group">
    <%= form.submit 'Create User', class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
