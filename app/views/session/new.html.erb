<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<%= form_with(scope: :session, url: login_path) do |f| %>

    <%= f.label :username, class: ' mt-3' %>
    <%= f.text_field :username, class: 'form-control mt-3' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control mt-3' %>

    <%= f.submit 'Login', class: "btn btn-primary btn-lg btn-block form-control mt-3" %>

<% end %>