<p id="notice"><%= notice %></p>

<div id="wrapper">
  <p> 
    <h6>Content</h6>
    <%= @post.content %>
  </p>

  <p>
    <h6>User</h6>
    <%= gravatar_for @post.user %>
    <%= @post.user.name %>
  </p>
  <small><%= time_ago_in_words(@post.created_at) %> ago</small>
</div>

<%= link_to 'Edit', edit_post_path(@post), class: "btn-sm btn-success m-3 p-2" %>
<%= link_to 'Back', root_path, class: "btn-sm btn-info m-3 p-2" %>
